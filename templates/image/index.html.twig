{% extends "base.html.twig" %}
{% block title %}Image
{% endblock %}
{% block body %}
	<div class="container">
		<div class="main" id="main">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12 m-b-30"></div>
				</div>
				<div class="row">
	<form class="navbar-left" id="form" role="form" enctype="multipart/form-data" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" class="form-control" id="image_title" name="image[title]" maxlength="50">
			<input type="hidden" class="form-control" id="image_product" name="image[product]" value="{{id}}">
		</div>
		<div class="form-group">
			<label>Image:</label>
			<div id="image-preview">
				<label id="image-label" for="product_imageFile">Choisir Une Image:</label>
				<div class="custom-file">
					<input type="file" id="illustration" name="image[image]" lang="en" class="custom-file-input"/>
					<label for="product_imageFile" class="custom-file-label"></label>
				</div>
			</div>
		</div>
		<div class="card-footer">
			<button type="submit" id="submit_image" class="btn btn-primary">Submit</button>
		</div>
	</form>

					<table class="table table-light mb-0">
						<thead>
							<tr>
								<th>Id</th>
								<th>Title</th>
								<th>Image</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody id="all-image"></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
